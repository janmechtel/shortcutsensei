{
	"name": "Shortcut Sensei",
	"version": "0.0.1",
	"description": "Learn keyboards shortcuts for popular webapps!",
	"homepage_url": "https://github.com/janmechtel/shortcutsensei",
	"manifest_version": 2,
	"minimum_chrome_version": "74",
	"applications": {
		"gecko": {
			"id": "rocketkeys-beta@github.com",
			"strict_min_version": "67.0"
		}
	},
	"icons": {
		"128": "icon.png"
	},
	"permissions": [
		"storage"
	],
	"options_ui": {
		"chrome_style": true,
		"page": "options/options.html"
	},
	"background": {
		"persistent": false,
		"scripts": [
			"background.ts"
		]
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Shortcut Sensei",
		"default_popup": "popup/popup.html"
	},
	"content_scripts": [
        {
            "matches": ["*://mail.google.com/*"],
            "js": ["apps/gmail/gmail.ts"],
			"css": ["styled-notifications.css"]
        }
    ],
	"web_accessible_resources": ["onboarding/*"]
}
